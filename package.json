{
  "name": "code-memo",
  "displayName": "code_memo",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:codeMemo.createMemo"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Code Memo",
      "properties": {
        "codeMemo.autoReconcile": {
          "type": "boolean",
          "default": true,
          "description": "Automatically repair memo links when files change."
        },
        "codeMemo.reconcileDelay": {
          "type": "number",
          "default": 800,
          "description": "Debounce delay (ms) before reconciling."
        }
      }
    },
    "commands": [
      {
        "command": "codeMemo.createMemo",
        "title": "Code-Memo: Create Memo Link"
      },
      {
        "command": "codeMemo.openMemo",
        "title": "Code-Memo: Open Memo"
      }
    ],
    "views": {
      "explorer": [
        {
          "icon": "",
          "id": "codeMemoView",
          "name": "Code Memo"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  }
}
